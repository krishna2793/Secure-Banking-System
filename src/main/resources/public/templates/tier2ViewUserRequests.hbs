{{#partial "head"}}

{{/partial}}
{{#partial "body"}}
    <div>
        <table id="results" width="100%">
            <thead>
            <tr>
                <th align="center">Modified Date</th>
                <th align="center">Created Date</th>
                <th align="center">Request ID</th>
                <th align="center">Status</th>
                <th align="center">Description</th>
                <th align="center">Email</th>
                <th align="center">Phone Number</th>
                <th align="center">Approve/Deny</th>
            </tr>
            </thead>
            <tbody>

            {{#each result }}
                <tr>
                    <td align="center">{{ modifiedDate }}</td>
                    <td align="center">{{ createdDate }}</td>
                    <td align="center">{{ requestId }}</td>
                    <td align="center">{{ status }}</td>
                    <td align="center">{{ description }}</td>
                    <td align="center">{{ email }}</td>
                    <td align="center">{{ phoneNumber }}</td>

                    <td align="center">
                        {{#eq status "PENDING"}}
                            <form method="post" action="/api/v1/tier2/approveCreateAccountReq" class="inline">
                                <input type="text" name="requestId" value="{{requestId}}" style="display: none">
                                <input id="update" class="btn btn-primary" type="submit" name="approve"
                                       value="Approve"/>
                            </form>
                            <form method="post" action="/api/v1/tier2/denyCreateAccountReq" class="inline">
                                <input type="text" name="requestId" value="{{requestId}}" style="display: none">
                                <input id="delete" class="btn btn-danger" type="submit" name="deny"
                                       value="Deny"/>
                            </form>
                        {{else}}
                            -
                        {{/eq}}
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
{{/partial}}

{{#partial "scripts"}}
{{/partial}}
{{> tier2Base}}