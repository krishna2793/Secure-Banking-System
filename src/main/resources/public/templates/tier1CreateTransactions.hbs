{{#partial "body"}}
    <div class="container">
        <!-- edit form column -->
        <form class="form-horizontal" method="POST" action="/api/v1/tier1/transactions">
            <div class="form-group">
                <label class="col-lg-3 control-label">From Account Number:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="fromAccount" name="fromAccount">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">To Account:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="toAccount" name="toAccount">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Amount:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="transactionAmount" name="transactionAmount">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Description:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" id="description" name="description">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-8">
                    <label for="transactionType">Select list:</label>
                    <select class="form-control" id="transactionType" name="transactionType">
                        <option>DEBIT</option>
                        <option>CREDIT</option>
                        <option>CHEQUE</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8">
                    <input type="submit" class="btn btn-primary" value="Save">
                    <span></span>
                    <input type="reset" class="btn btn-primary"value="Reset">
                </div>
            </div>
        </form>
    </div>
{{/partial}}

{{#partial "scripts"}}
    <script type="text/javascript" src="/js/passwordValidation.js"></script>
{{/partial}}

{{> tier1Base}}